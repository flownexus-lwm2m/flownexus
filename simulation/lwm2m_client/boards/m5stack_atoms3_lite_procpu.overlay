&i2c1 {
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;

	sht4x@44 {
		status = "okay";
		compatible = "sensirion,sht4x";
		reg = <0x44>;
		repeatability = <2>;
	};

	/*
	 * This board does not have a BME280 but a BMP280. The two parts are
	 * similar, the BME280 driver works for BMP280 as well.
	 */
	bme280@76 {
		compatible = "bosch,bme280";
		status = "okay";
		reg = <0x76>;
	};
};
